<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Text">
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

    <style name="Text.Title" parent="Text">
        <item name="android:textSize">@dimen/text_size_title</item>
    </style>

    <style name="Text.Title.BoldItalic" parent="Text">
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="android:textStyle">bold|italic</item>
    </style>

    <style name="Text.Title2" parent="Text">
        <item name="android:textSize">@dimen/text_size_title2</item>
    </style>

    <style name="Text.Title2.Bold" parent="Text">
        <item name="android:textSize">@dimen/text_size_title2</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Text.Body1" parent="Text">
        <item name="android:textSize">@dimen/text_size_body1</item>
    </style>

    <style name="Text.Body2" parent="Text">
        <item name="android:textSize">@dimen/text_size_body2</item>
    </style>

</resources>